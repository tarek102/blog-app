<h1>List all posts</h1>
<ul>
    <% @posts.each do |post| %>
      <li>
        <h3 class="post-title"><%= post.title %> #<%= post.id %></h3>
        <p><%= post.text %></p>
        <p>Comments <%= post.comments_counter %>, Likes <%= post.likes_counter %></p>
        <ul>
          <% post.return_recent_comments.each do |comment| %>
            <li><%= comment.author.name %> : <%= comment.text%></li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>