<div class='main-div'>
  <h1>
    List of all Users
  </h1>

  

  <ul>

  <% @users.each do |user| %>
    <li>
      <div class='users-list'>
        <div class='user-img'>
          <%# <%= image_tag user.photo %> 
        </div>
        <div class='user-info'>
          <h2><%= link_to user.name, user_path(user) %></h2>
          <h5>Number of posts: <%= user.post_counter %></h5>
        </div>
      </div>
    </li>
  <% end %>
  </ul>
  <%# <%= link_to 'Create post', new_user_post_path(@user) %> %>
</div>