<div class='user-show'>


  <div class='users-list'>
    <div class='user-img'>
      <img src="<%= @user.photo %>" alt="<%= @user.name %>">
    </div>
    <div class='user-info'>
      <h2><%= @user.name %></h2>
      <h5>Number of posts: <%= @user.posts.count %></h5>
    </div>
  </div>
  <div class='bio'>
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
  </div>


    <div>
      <%= link_to "Add New Post", "/users/#{@user.id}/posts/new" %>
    </div>


    <% @user.posts.each do |post| %>
      <div class='posts'>
        <h3><%= link_to post.title, user_post_path(@user.id, post) %></h3>
        <div class='post-text'>
          <p><%= post.text%></p>
          <div class='post-react'>
            <h5>Comments: <%= post.comments_counter%></h5>
            <h5>Likes: <%= post.likes_counter%></h5>
          </div>
          
        </div>
      </div>
    <% end %>

    <%= link_to "See all posts", user_posts_path(@user) %>

</div>